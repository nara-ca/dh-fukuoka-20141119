<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:id="@+id/ex4_root"
              android:background="#ffffff">

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背景色変更"
            android:id="@+id/ex4_switch"
            android:layout_margin="8dp"
            android:textOn="GREEN"
            android:textOff="WHITE"/>

    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="リスト読み込み"
            android:id="@+id/ex4_button_1"/>

    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="リスト削除"
            android:id="@+id/ex4_button_2"/>

    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="終了"
            android:id="@+id/ex4_button_3"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ex4_list"/>

</LinearLayout>